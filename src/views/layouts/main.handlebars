<html lang='fr'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Real Estate Gig</title>
    <link rel='shortcut icon' href='./assets/favicon.png' type='image/x-icon' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=DM+Sans:wght@500&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      type='text/css'
      media='screen and (max-width: 768px)'
      href='./css/mobile.css'
    />
    <link
      rel='stylesheet'
      type='text/css'
      media='screen and (min-width: 769px)'
      href='./css/style.css'
    />
    <script defer src='./js/modal.js'></script>
  </head>
  <body>
    <div class='accountModal'>
      <div class='modal-content'>
        <div class='container-close'>
          <span class='close-modalAccount'>&times;</span>
        </div>
        <form action='/user/edit' method='POST'>
          <div class='form-group'>
            <label for='email'>Modifier votre email</label>
            <input
              type='email'
              name='email'
              id='email'
              placeholder='Enter your email'
            />
          </div>
          <div class='form-group'>
            <button type='submit'>Modifier</button>
          </div>
        </form>
      </div>
    </div>
    <div class='logModal'>
      <div class='modal-content'>
        <div class='container-close'>
          <span class='close-modal'>&times;</span>
        </div>
        <form action='/user/login' method='POST'>
          <div class='form-group'>
            <label for='email'>Email</label>
            <input
              type='email'
              name='email'
              id='email'
              placeholder='Enter your email'
            />
          </div>
          <div class='form-group'>
            <label for='password'>Mot de passe</label>
            <input
              type='password'
              name='password'
              id='password'
              placeholder='Enter your password'
            />
          </div>
          <div class='form-group'>
            <button type='submit'>Connexion</button>
            <p>Pas de compte ?
              <a class='registerButton'>Inscription</a></p>
          </div>
        </form>
      </div>
    </div>
    <div class='registerModal'>
      <div class='modal-content'>
        <div class='container-close'>
          <span class='close-modalRegister'>&times;</span>
        </div>
        <form action='/user/signIn' method='POST'>
          <div class='form-group'>
            <label for='email'>Email</label>
            <input
              type='email'
              name='email'
              id='email'
              placeholder='Enter your email'
            />
          </div>
          <div class='form-group'>
            <label for='password'>Mot de passe</label>
            <input
              type='password'
              name='password'
              id='password'
              placeholder='Enter your password'
            />
          </div>
          <div class='form-group'>
            <button type='submit'>Inscription</button>
          </div>
        </form>
      </div>
    </div>
    <header>
      <div class='headerHeader'>
        <div class='links'>
          <a href='https://www.facebook.com/' target='_blank'><img
              class='svg'
              src='./assets/facebook.svg'
              alt='facebook'
            /></a>
          <a href='https://www.instagram.com/' target='_blank'><img
              class='svg'
              src='./assets/instagram.svg'
              alt='instagram'
            /></a>
          <a href='https://twitter.com/' target='_blank'><img
              class='svg'
              src='./assets/twitter.svg'
              alt='twitter'
            /></a>
          <a href='https://linkedin.com/' target='_blank'><img
              class='svg'
              src='./assets/linkedin.svg'
              alt='youtube'
            /></a>
        </div>
        <a href='tel:+0646085456'>06.46.01.44.35</a>
      </div>
      <div class='header'>
        <div class='header-left'>
          <a href='{{url}}/'><img src='./assets/logo.svg' alt='logo' /></a>
        </div>
        <div class='mobileNav'>
          <a class='openModal' href='#'><span
              class='containerBurger'
            ></span></a>
          <ul class='mobileNavList'>
            <li><a href='{{url}}/'>Accueil</a></li>
            <li><a href='{{url}}/agents'>Agents</a></li>
            <li><a href='{{url}}/properties'>Propiétés</a></li>
            <li><a href='{{url}}/blog'>Blog</a></li>
            {{#if connected}}
              <li style='display: none'><a><button
                    class='accountButtonMobile'
                  >Mon compte</button></a></li>
              <li><a><button class='logButtonMobile'>Connexion</button></a></li>
            {{else}}
              <li style='display: none'><a><button
                    class='accountButtonMobile'
                  >Mon compte</button></a></li>
              <li><a><button class='logButtonMobile'>Connexion</button></a></li>
            {{/if}}

          </ul>
        </div>

        <div class='header-right'>
          <ul>
            <li><a href='{{url}}/'>Accueil</a></li>
            <li><a href='{{url}}/agents'>Agents</a></li>
            <li><a href='{{url}}/properties'>Propriétés</a></li>
            <li><a href='{{url}}/blog'>Blog</a></li>
            {{#if connected}}
              <li><a><button class='accountButtonDesktop'>Mon compte</button></a></li>
              <li style='display: none'><a><button
                    class='logButtonDesktop'
                  >Connexion</button></a></li>
            {{else}}
              <li style='display: none'><a><button
                    class='accountButtonDesktop'
                  >Mon compte</button></a></li>
              <li><a><button
