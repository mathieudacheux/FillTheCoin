<div class='containerTitle'>
  <h1>Propriétés</h1>
  <p class='addProperty'>Ajouter</p>
</div>
<div class='modalAddAgent'>
  <div class='modal-content'>
    <div class='container-close'>
      <span class='close-modalAccount'>&times;</span>
    </div>
    <form action='/properties/add' method='POST'>
      <div class='form-group'>
        <label>Ajouter une propriété</label>
        <input type='text' name='address' id='address' placeholder='Adresse' />
        <input
          type='text'
          name='description'
          id='description'
          placeholder='Description'
        />
        <input type='text' name='city' id='city' placeholder='Ville' />
        <input type='text' name='country' id='country' placeholder='Pays' />
        <input type='number' name='price' id='price' placeholder='Prix' />
        <input
          type='url'
          name='image'
          id='image'
          placeholder='Lien vers une image'
        />
      </div>
      <div class='form-group'>
        <button type='submit'>Ajouter</button>
      </div>
    </form>
  </div>
</div>
<div class='modalUpdateAgent'>
  <div class='modal-content'>
    <div class='container-close'>
      <span class='close-modalUpdate'>&times;</span>
    </div>
    <form action='/properties/update' method='POST' id='updatePropertyForm'>
      <div class='form-group'>
        <label>Ajouter une propriété</label>
        <input
          type='text'
          name='address'
          id='addressForm'
          placeholder='Adresse'
        />
        <input
          type='text'
          name='description'
          id='descriptionForm'
          placeholder='Description'
        />
        <input type='text' name='city' id='cityForm' placeholder='Ville' />
        <input type='number' name='price' id='priceForm' placeholder='Prix' />
        <input
          type='url'
          name='image'
          id='imageForm'
          placeholder='Lien vers une image'
        />
      </div>
      <div class='form-group'>
        <button type='submit'>Modifier</button>
      </div>
    </form>
  </div>
</div>
<div class='container-properties'>
  {{#each estates}}
    <div class='card-property {{this.id}}'>
      <div class='container-deleteProperty'>
        <p class='openUpdateModal'>&#9998;</p>
        <a href='/properties/delete/{{this.id}}'>&times;</a>
      </div>
      <img class='img-property' src={{this.image}} alt={{this.description}} />
      <div class='property-content'>
        <h5 class='address-property'>
          {{this.address}}
        </h5>
        <p class='description description-property'>{{this.description}}</p>
        <div class='information-content'>
          <p class='city-property'>{{this.city}}</p>
          <p class='button-text price-property'>${{this.price}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<script defer src='../js/updateAgent.js'></script>